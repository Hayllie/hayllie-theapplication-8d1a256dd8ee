<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    tools:context=".ManageAccountActivity">


    <TextView
        android:id="@+id/tv_sayhi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:gravity="center_horizontal"
        android:text="@string/txt_tosayhi"
        android:textColor="@color/colorGray19"
        android:textSize="50sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/line"
        android:layout_width="fill_parent"
        android:layout_height="2dp"
        android:layout_marginEnd="120dp"
        android:layout_marginStart="120dp"
        android:background="@color/colorGray19"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_sayhi"
        tools:layout_editor_absoluteY="148dp" />


    <TableRow
        android:id="@+id/row1"
        android:layout_width="334dp"
        android:layout_height="80dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/blueroundedcorners"
        android:clickable="true"
        android:onClick="goto7walat"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/line">

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="3dp"
            android:layout_height="35dp"
            android:layout_marginTop="20dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/go" />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="15dp"
            android:layout_marginTop="20dp"
            android:layout_weight="1"
            android:text="@string/txt_7walat"
            android:textColor="@color/colorWhite"
            android:textSize="20sp" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="20dp"
            android:layout_height="60dp"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:background="@drawable/whitecircle"
            android:padding="15dp"
            app:srcCompat="@drawable/bluecard" />
    </TableRow>

    <TableRow
        android:id="@+id/row2"
        android:layout_width="332dp"
        android:layout_height="80dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/violetredroundedcorners"
        android:clickable="true"
        android:onClick="gotoSaderat"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/row1">

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="3dp"
            android:layout_height="35dp"
            android:layout_marginTop="20dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/go" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="15dp"
            android:layout_marginTop="20dp"
            android:layout_weight="1"
            android:text="@string/txt_sader"
            android:textColor="@color/colorWhite"
            android:textSize="20sp" />

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="20dp"
            android:layout_height="60dp"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:background="@drawable/whitecircle"
            android:padding="15dp"
            app:srcCompat="@drawable/pinkcard2" />
    </TableRow>

    <TableRow
        android:id="@+id/row3"
        android:layout_width="330dp"
        android:layout_height="80dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/yellowroundedcorners"
        android:clickable="true"
        android:onClick="gotoEdari"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/row2">

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="3dp"
            android:layout_height="35dp"
            android:layout_marginTop="20dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/go" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="15dp"
            android:layout_marginTop="20dp"
            android:layout_weight="1"
            android:text="@string/txt_masareef"
            android:textColor="@color/colorWhite"
            android:textSize="22sp" />

        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="20dp"
            android:layout_height="60dp"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:background="@drawable/whitecircle"
            android:padding="15dp"
            app:srcCompat="@drawable/yellowcard" />

    </TableRow>

    <TableRow
        android:layout_width="wrap_content"
        android:layout_height="82dp"
        android:layout_marginTop="20dp"
        android:gravity="center_horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/row3">

        <LinearLayout
            android:id="@+id/pView"
            android:layout_width="140dp"
            android:layout_height="match_parent"
            android:layout_marginRight="30dp"
            android:background="@drawable/blueroundedcorners"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textToAppear"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:gravity="center_horizontal"
                android:text="@string/txt_branchCredit"
                android:textColor="@color/colorWhite"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/tv_branchCreditValue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center_horizontal"
                android:text="@string/txt_branchCreditValue"
                android:textColor="@color/colorWhite" />
        </LinearLayout>

        <TextView
            android:id="@+id/textView4"
            android:layout_width="140dp"
            android:layout_height="82dp"
            android:layout_marginLeft="30dp"
            android:background="@drawable/blueroundedcorners"
            android:gravity="center_horizontal"
            android:onClick="Logout"
            android:text="@string/txt_logout"
            android:textColor="@color/colorWhite"
            android:textSize="25sp" />
    </TableRow>


</android.support.constraint.ConstraintLayout>